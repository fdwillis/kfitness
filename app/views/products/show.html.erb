                <span class="font-11">Total Pages</span>
                <p class="mt-n2 mb-1">
                    <strong class="color-theme">150+</strong>
                </p>
            </div>
        </div>
        
        <div class="d-flex mt-3">
            <div class="flex-grow-1">
                <span class="font-11">Ratings & Reviews </span>
                <p class="mt-n2">
                    <strong class="color-theme"><%= @callToRain['rating'] %></strong>
                    <i class="fa fa-star color-yellow-dark ps-2"></i>
                    <i class="fa fa-star color-yellow-dark"></i>
                    <i class="fa fa-star color-yellow-dark"></i>
                    <i class="fa fa-star color-yellow-dark"></i>
                    <i class="fa fa-star color-yellow-dark"></i>
                </p>
            </div>
            <div class="flex-shrink-1 mt-2">
                <a href="#"><%= @callToRain['reviews'].size %> Reviews</a>
            </div>
        </div>
        
        
        
        <div class="divider mt-4"></div>
        <% @callToRain['country'].split(',').each do |country| %>
          <a href="<%= amazon_path(asin: @callToRain['asin'], country: country) %>/?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %> " target='_blank'>
            <%= button_tag( :class => "btn btn-full btn-m font-900 text-uppercase rounded-sm bg-yellow-dark form-control") do %>
              <i class="fa fa-amazon font-20 color-white"></i> 
              <i class="flag-icon flag-icon-<%= country.downcase %> font-20 color-white"></i>
              Purchase On Amazon
            <% end %>
          </a>

        <% end %>
        <div class="d-flex mt-4">
            <div class="flex-grow-1">
              <div class="font-20 text-center">
                Share With The World <%= social_share_button_tag("Title", :url => "https://#{request.env['HTTP_HOST']}?&referredBy=#{current_user&.present? ? current_user&.uuid : params['referredBy']}", :image =>  "https://images.mktw.net/im-720056?width=700&height=466", desc: truncate("Body", length: 50)) %>
              </div>
            </div>
        </div>
        <!-- <%= Ahoy::Event.where_event("Product Purchase Intent", product: @callToRain['asin'].upcase).count %> -->
