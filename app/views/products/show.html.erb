
<div class="header-clear-medium"> 
<%= @callToRain %> 
  <div class="splide double-slider slider-no-dots" id="double-slider-12">
    <div class="splide__track">
        <div class="splide__list">
          <% @callToRain['images'].split(',').reject(&:blank?).each do |img| %>
            <div class="splide__slide">
                <div class="card rounded-m shadow-l mx-3 bg-13" data-card-height="300" style="background-image:url('<%= img %>')">
                    <div class="card-bottom text-center mb-0">
                    </div>
                    <div class="card-overlay bg-gradient"></div>
                </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
          
  <div class="card card-overflow card-style">
    <div class="content">
        <div class="d-flex">
            <div class="flex-grow-1">
                <h1 class="font-20">
                  <%= @callToRain['brand'] %><br>
                  <i class="font-20 px-1 fa fa-eye"></i> <%= Ahoy::Event.where_event("Product Visit", product: @callToRain['asin']).size %>
                </h1>
                <div class="me-auto"> 
                  <% @callToRain['tags'].split(',').each do |tag| %> 
                      <% if tag.present? %>
                        <span class="badge no-click bg-<%= ['pink','yellow','orange','red','aqua','blue','teal','magenta','sunny','mint', 'pink2','gray', 'grass'].sample %>-dark p-2 text-uppercase rounded-s mb-3"><%= tag %></span>
                      <% end %>
                  <% end %>
                </div>
                

                <p class="mt-n1 font-12 color-highlight mb-4"></p>
                <!-- User::ACCEPTEDcountries.values.detect {|item| item[:site] == rainforestResponseLinkForThisProduct.split("://www.")[1].split("/")[0] } -->
            </div>
              <div class="flex-shrink-1 m-1">
                <a href="#" data-menu="flag-country-explained" class="btn btn-s text-uppercase font-900 bg-highlight mb-4 rounded-sm"><i class="font-20 color-white px-1 fa fa-amazon"></i><span class="flag-icon flag-icon-<%= @country %> font-20"></span></a>
              </div>
              <div class="flex-shrink-1 m-1">
                <% if current_user %>

                    <% if @profileMetadata.present? && @profileMetadata['tracking'].present? && @profileMetadata['tracking'].split(',').include?("#{@callToRain['asin']}-#{@callToRain['country']}") %>
                      <a href="<%= list_path(id: @callToRain['asin'], remove: true)  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="icon icon-xs rounded-pill color-white"><i class="fa fa-list color-highlight"></i></a>
                    <% else %>
                      <a href="<%= list_path(id: @callToRain['asin'], country: @callToRain['country'])  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="icon icon-xs rounded-pill bg-highlight"><i class="fa fa-list"></i></a>
                    <% end %>
                    <% if @profileMetadata.present? && @profileMetadata['wishlist'].present? && @profileMetadata['wishlist'].split(',').include?("#{@callToRain['asin']}-#{@callToRain['country']}") %>
                      <a href="<%= loved_path(id: @callToRain['asin'], remove: true)  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="icon icon-xs rounded-pill color-white"><i class="fa fa-heart color-highlight"></i></a>
                    <% else %>
                      <a href="<%= loved_path(id: @callToRain['asin'], country: @callToRain['country'])  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="icon icon-xs rounded-pill bg-highlight"><i class="fa fa-heart"></i></a>

                    <% end %>
                <% else %>

                  <a href="<%= list_path(id: @callToRain['asin'])  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" data-confirm="Add this to your loved list?" class="icon icon-xs rounded-pill bg-highlight"><i class="fa fa-heart"></i></a>
                  <a href="<%= list_path(id: @callToRain['asin'])  %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" data-confirm="Add this to your public list?" class="icon icon-xs rounded-pill bg-highlight"><i class="fa fa-list"></i></a>
                <% end %>
              </div>
        </div>
        <!-- add renderforest Keywords via response 'keywords_list' -->
