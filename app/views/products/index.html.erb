<p id="notice"><%= notice %></p>

<h1>Trending Products</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Tags</th>
      <th>Asin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.country %></td>
        <td><%= product.tags %></td>
        <td><%= product.asin %></td>
        <td><%= link_to 'Show', product %></td>
        <% if current_user&.admin? %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
          <td><%= link_to 'Add To Wishlist', wishlist_path(id: product.asin), method: :post, data: { confirm: 'Add this to your wishlist?' } %></td>
          <td><%= link_to 'Add To Tracking', tracking_path(id: product.asin), method: :post, data: { confirm: 'Add this to your tracking?' } %></td>
        <td><%= User.renderLink(params['referredBy'], product.country, product.asin,@loadedLink) %></td>
        <td><%= (@loadedLink) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
