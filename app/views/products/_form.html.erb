<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :country %>
    <%= form.select :country, [
      ['Australia', 'au'],
      ['Belgium', 'be'],
      ['Brazil', 'br'],
      ['Canada', 'ca'],
      ['France', 'fr'],
      ['Germany', 'de'],
      ['Italy', 'it'],
      ['Japan', 'jp'],
      ['Mexico', 'mx'],
      ['Netherlands', 'nl'],
      ['Poland', 'pl'],
      ['Singapore', 'sg'],
      ['Spain', 'es'],
      ['Sweden', 'se'],
      ['United Arab Emirates', 'ae'],
      ['United Kingdom', 'gb'],
      ['United States', 'us']
    ], required: true, class: 'lp-pom-form-field', style: 'background-color: #1b6a62;' %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :tags %>
  </div>

  <div class="field">
    <%= form.label :asin %>
    <%= form.text_field :asin %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
