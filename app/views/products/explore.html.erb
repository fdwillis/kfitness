<% if @products.total_pages > 1 %>
  <nav aria-label="pagination-demo">
      <ul class="pagination justify-content-center">
          <% if params['page'].to_i > 1 %>
            <li class="page-item">
                <a class="page-link rounded-xs bg-highlight color-white py-2 border-0" href="/product?page=<%= params['page'].to_i - 1 %>&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" tabindex="-1" aria-disabled="true"><i class="fa fa-angle-left"></i></a>
            </li>
          <% end %>
          <% @products.total_pages.times do |pageNum|%>

            <li class="page-item"><a class="page-link rounded-xs py-2 bg-highlight color-white border-0" disabled='true' href="/product?page=<%= pageNum + 1 %>&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>"><%= pageNum + 1 %></a></li>
          <% end %>
          <% if params['page'].to_i < @products.total_pages %>
            <li class="page-item">
                <a class="page-link rounded-xs bg-highlight color-white py-2 border-0" href="/product?page=<%= params['page'].present? ? params['page'].to_i + 1 : 2 %>&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>"><i class="fa fa-angle-right"></i></a>
            </li>
          <% end %>
      </ul>
  </nav>
<% end %>