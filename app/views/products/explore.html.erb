<div class="header-clear-medium">
    <div class="card card-style">
      <div class="content text-center">
        <h1 class="font-700 font-20 opacity-50 text-center mt-4">Recommended Products</h1>
        <h1 class="font-700 font-15 opacity-50 text-center"><%= User::ACCEPTEDcountries[params[:country]][:country] %> Amazon</h1>
        <span class="flag-icon flag-icon-<%= params[:country].downcase %> display-1"></span>
       
      </div>
    </div>
    <div class="row mb-0">
      <div class="col-6 pe-0">
        <% if @callToRain[0].present? %>

          <a href="/product/<%= @callToRain[0]['asin'].parameterize(separator: '-') %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="card card-style mb-2" style="background-image: url('<%= @callToRain[0]['images'].split(',').sample %>');height: 135px;" data-card-height="135">
