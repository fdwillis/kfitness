<div class="header-clear-medium">
    <div class="card card-style">
      <div class="content text-center">
        <h1 class="text-center">Trending Products From<br><%= User::ACCEPTEDcountries[params[:country]][:country] %></h1>
        <p class="boxed-text-l font-14"><i class="fa fa-amazon font-14"></i> Products Moving Fast On Amazon!</p>
        <span class="flag-icon flag-icon-<%= params[:country].downcase %> display-1"></span>
       
      </div>
    </div>
    <div class="row mb-0">
      <div class="col-6 pe-0">
        <% if @products[0].present? %>
          <a href="/product/<%= @products[0].asin.parameterize(separator: '-') %>?&referredBy=<%= params['referredBy'] %>" class="card card-style mb-2" style='background-image: url("https://images.mktw.net/im-720056?width=700&height=466");height: 135px;' data-card-height="135">
              <div class="card-top text-center">
                <% @products[0].tags.split(',').shuffle.take(1).each do |tag| %>
                  <span class="badge float-end bg-green-dark p-2 text-uppercase rounded-s m-2"><%= tag %></span>
                <% end %>
              </div>
              <div class="card-bottom p-3">
                  <h5 class="color-white font-500 font-14 mb-n1">
                      <%= @products[0].asin %>
                  </h5>
                  <span class="color-white opacity-50 font-10">
                    <%= time_ago_in_words(@products[0].created_at) %> ago</span>
              </div>
              <div class="card-overlay bg-black opacity-70"></div>
          </a>
        <% end %>
