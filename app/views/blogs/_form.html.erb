<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :asins %>
    <%= form.text_field :asins %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, name: "attachment[file][]" %>
    <%= cl_image_upload_tag(:image_id, :html => { :multiple => true }, :use_filename => true, :folder => "blog/#{current_user.uuid}") %>

  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :tags %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.select :country, [['Australia', 'AU'], ['Belgium', 'BE'], ['Brazil', 'BR'], ['Canada', 'CA'], ['China', 'CN'], ['France', 'FR'], ['Germany', 'DE'], ['India', 'IN'], ['Italy', 'IT'], ['Japan', 'JP'], ['Mexico', 'MX'], ['Netherlands', 'NL'], ['Poland', 'PL'], ['Saudi Arabia', 'SA'], ['Singapore', 'SG'], ['Spain', 'ES'], ['Sweden', 'SE'], ['United Arab Emirates', 'AE'], ['United Kingdom', 'GB'], ['United States', 'US']], required: true, class: 'lp-pom-form-field', style: 'background-color: #1b6a62;' %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, value: current_user&.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
