                    <a href="/blog/<%= blog.title.parameterize(separator: '-') %>?&referredBy=<%= current_user&.present? ? current_user&.uuid : params['referredBy'] %>" class="card card-style" style='background-image: url("<%=  blog.images.split(',').shuffle.first %>")' data-card-height="300" style="height: 300px;">
