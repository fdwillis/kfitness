<div class="header-clear-medium">
	<% if current_user %>
		<div class="mt-2 content">
			<% @wishlist.uniq.each do |item| %>
				<a href="#">
					<div class="card card-style mb-3">
						<div class="d-flex">
							<div class="ps-2 ms-2 align-self-center">
								<h1 class="pt-4 font-22"><%= item %></h1>
								<p class="font-11 opacity-50 mt-n2 mb-4">The latest Smartphone Devices </p>
							</div>
							<div class="flex-shrink-1 mt-1">
				                
				                <a href="<%= loved_path(id: item, remove: true)  %>" class="icon icon-xs rounded-pill shadow-m ms-2 color-white"><i class="fa fa-heart color-highlight"></i></a>
				          </div>
						</div>
					</div>
				</a>
			<% end %>
		</div>
	<% else %>
		<div class="mt-2 content">
			
			<a href="#">
				<div class="card card-style mb-3">
					<div class="d-flex">
						<div class="ps-2 ms-2 align-self-center">
							<h1 class="pt-4 font-22">Smartphones</h1>
							<p class="font-11 opacity-50 mt-n2 mb-4">The latest Smartphone Devices </p>
						</div>
						<div class="ms-auto me-2 align-self-center">
							<i class="fa fa-mobile-alt color-dark-dark fa-3x mt-4 mb-4 me-3"></i>
						</div>
					</div>
				</div>
			</a>
		</div>
	<% end %>
</div>