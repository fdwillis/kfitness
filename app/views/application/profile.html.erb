<div class="header-clear-medium">

	<% if current_user == @userFound %>
		<% currentMembership = @userFound.checkMembership %>
	  <div class="d-flex content mb-1">
	    <!-- left side of profile -->
	    <div class="flex-grow-1">
	        <h1 class="font-700"><%=@profile['name'].titleize%>#<%= current_user&.uuid %></h1>
	        <p class="mb-2"><%= (@profile['metadata'].present? && @profile['metadata']['bio'].present?) ? @profile['metadata']['bio'] : nil %></p>
	        <% if @userFound&.amazonCountry.present? %>
		        <p class="font-10">
		            <strong class="color-theme pe-1"><i class="fa fa-location-arrow"></i></strong><%= User::ACCEPTEDcountries[@userFound&.amazonCountry.downcase][:country] %>&nbsp;
		            <!-- <strong class="color-theme pe-1">1k</strong>Followers -->
		        </p>
		      <% end %>

	    </div>
	    <!-- right side of profile. increase image width to increase column size-->
	    <% if @profile['metadata'].present? && @profile['metadata']['profileImage'].present? %>
	      <img data-card-height="272" src="<%= @profile['metadata']['profileImage'] %>" data-src="<%= @profile['metadata']['profileImage'] %>" width="115" height="115" class="rounded-circle mt-3 shadow-xl preload-img entered loaded" data-ll-status="loaded">
	    <% end %>
	  </div>

		<% if @loginLink.present? %>
			<%= link_to @loginLink['url'] %>
		<% end %>
		

		<% if @accountItemsDue.present? && @accountItemsDue.count > 0 %>
			<div class="content row">
			  <a href="<%= @stripeAccountUpdate['url'] %>" class='p-2'>
	        <%= button_tag( :class => 'btn btn-full btn-m font-900 text-uppercase rounded-sm bg-green-dark form-control') do %>
	          <i class="fa fa-check-circle font-20 color-white"></i> COMPLETE SELLER ACCOUNT
	        <% end %>
	      </a>
	    </div>
		<% end %>
	  
  	<% if @userFound.trader? && currentMembership.map{|d| d[:membershipType]}.include?('trader') %>
			<div class="card card-style">
		    <div class="content mb-0">
		      <div class="row">
			      	<h3 class="font-700 font-22 opacity-50 text-center mt-4">Manage Autotrading Keys</h3>
			      	<h5 class="font-700 font-12 opacity-50 mb-4 text-center">
			      		Your Webhook: <%= "https://oarlin.com/signals?&traderID=#{current_user&.uuid}" %>
			      	</h5>
			      	<%= form_for :editKeys, url: manage_trading_keys_path do |f| %>
				      	<%= f.label "Kraken Live API Key" %><br />
			      		<%= f.text_field :krakenLiveAPI, value: current_user&.krakenLiveAPI, class: 'form-control form-control-lg form-control-alt py-3' %><br />
				      	<%= f.label "Kraken Live Secret Key" %><br />
			      		<%= f.text_field :krakenLiveSecret, value: current_user&.krakenLiveSecret, class: 'form-control form-control-lg form-control-alt py-3' %><br />
				      	<%= f.label "Kraken Test API Key" %><br />
			      		<%= f.text_field :krakenTestAPI, value: current_user&.krakenTestAPI, class: 'form-control form-control-lg form-control-alt py-3' %><br />
				      	<%= f.label "Kraken Test Secret Key" %><br />
			      		<%= f.text_field :krakenTestSecret, value: current_user&.krakenTestSecret, class: 'form-control form-control-lg form-control-alt py-3' %><br />
			      		<%= f.submit "Save Keys",class: "form-control btn btn-full btn-m rounded-m bg-highlight font-700 text-uppercase mb-4 mt-4" %>

		          <% end %>
			    </div>
		    </div>
		  </div>
    <% end %>
	<% end %>
	<div class="card card-style">
    <!-- follow buttons-->
    <% unless current_user == @userFound %>
      <div class="content mb-0">
	      <div class="row">
              <div class="col-12">
                <a href="#">
					        <%= button_tag( :class => "btn btn-full btn-m rounded-s text-uppercase font-700 color-highlight-dark border-highlight-dark form-control", 'data-menu'=>"flag-country-explained") do %>
					          <i class="fa fa-amazon color-highlight"></i>
					        <% end %>
					      </a>
              </div>

	      </div>
      </div>
    <% end %>
    <div class="content mb-0 mt-n1">  
      <% if @profile['metadata'].present?  %>
	    	<% if @profile['metadata']['tracking'].present? && @profile['metadata']['tracking'].split('*').size > 0  %>
	    	<div class="row">
	    		
	    		<% @profile['metadata']['tracking'].split('*').reject(&:blank?).each do |itm| %>
			      <% if itm.split('-')[1].present? %>  
				      <% if request.user_agent.include?('Mobile') %>
				      	<a class="col-12 pe-0" href="/product/<%= itm.split('~')[0].upcase %>?&product[country]=<%= itm.split('~')[1].downcase %>&referredBy=<%= @userFound&.uuid  %>">
				      		<div class="card rounded-m shadow-l mx-1" data-card-height="250" style="height:96vh; background-image:url(<%= itm.split('~')[2].split(',').sample(1)[0] %>)">
	                </div>
	              </a>

				      <% else %>
				      	<a class="col-4 pe-0" href="/product/<%= itm.split('~')[0].upcase %>?&product[country]=<%= itm.split('~')[1].downcase %>&referredBy=<%= @userFound&.uuid  %>">
				      		<div class="card rounded-m shadow-l mx-1" data-card-height="250" style="height:96vh; background-image:url(<%= itm.split('~')[2].split(',').sample(1)[0] %>)">
	                </div>
	              </a>
				      <% end %>
			      <% end %>
		      <% end %>
	    	</div>
	      <% end %>
      <% end %>
    </div>
  </div>
</div>






