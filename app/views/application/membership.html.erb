<div class="row">
    <div class="mx-auto card card-style" style="max-width:700px!important;">
        <div class="content">
            <div class="d-flex mb-3">
                <div>
                    <h1>Free</h1>
                    <p class="mt-n3 font-12 color-highlight">You Will Not Be Charged</p>
                </div>
                <div class="ms-auto text-end">
                    <h1><%= number_to_currency(freeMembership['unit_amount'] * 0.01, precision: 2) %></h1>
                    <p class="mt-0 font-10">One Time</p>
                </div>
            </div>
            <div class="list-group list-custom-small">
              <% freeMembership['metadata'].each do |point| %>
                  <a href="#">
                      <i class="fa color-theme fa-check opacity-50"></i>
                      <span><%= point[0] %></span>:
                      <span><%= point[1] %></span>
                  </a>
              <% end %>
                
            </div>
            <a href="<%= @freeMembership['url'] %>" class="btn btn-full btn-sm rounded-sm text-uppercase font-700 mt-3 bg-highlight">join now</a>
            <br>
        </div>
    </div>
</div>

