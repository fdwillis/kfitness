

<% freeMembership = Stripe::Price.retrieve(ENV['freeMembership']) %>
<% affiliateMonthly = Stripe::Price.retrieve(ENV['affiliateMonthly']) %>
<% affiliateAnnual = Stripe::Price.retrieve(ENV['affiliateAnnual']) %>
<% businessMonthly = Stripe::Price.retrieve(ENV['businessMonthly']) %>
